%main.layout
  .layout-hero--cover
    .hero-intro
      = image_tag "whoa.svg", class: "logo"
      %form
        %input.hero-search{ type: "text" }
    .hero-background

  %section.posts--list
    %ul
    - @posts.each do |post|
      - post = PostPresenter.new(post)
      %li
        %article
          = image_tag post.feature_image.url, class: "post__feature-thumbnail"
          = link_to post, class: "post__title" do
            %h2 
              = post.title
          .post__byline
            .post__byline__author
              = "By #{post.author_full_name}"
            .post__byline__date
              = post.published_at_fulldate
          .post__body.post__body--summary
            = strip_tags(post.body_summary_html)
          %div.post__read-more
            = link_to post, class: "button" do
              read more
