%header.navigation
  %a{class: "navigation__trigger", href: "#"}
    .icon.icon--menu
    .icon.icon--plus-sign
  %nav.navigation__drawer
    %ul
      %li
        = link_to "All Posts", root_path,
          class: "navigation__link"
      - if admin_signed_in?
        %li
          = link_to "Edit Posts",
            admins_posts_path, 
            class: "navigation__link"
        %li
          = link_to "Account Settings",
            edit_admin_registration_path,
            class: "navigation__link"
        %li
          = link_to "Logout", 
            destroy_admin_session_path, 
            method: :delete,
            class: "navigation__link"
